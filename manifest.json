{
  "manifest_version": 3,
  "name": "Smart Highlighter",
  "version": "1.0.0",
  "description": "Advanced text highlighting with project management, notes, and sharing capabilities",
  
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Highlighter"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "dashboard.js", "dashboard.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
